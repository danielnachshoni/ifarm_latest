<h3>Add Order</h3>
<div class="row">
    <form action="/orders" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="number" id="number-input" name="price" step="any" pattern="[0-9\.\-]*" value="{{order.price}}">
                <label for="status">price(â‚ª)/kg</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Describe your product:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
