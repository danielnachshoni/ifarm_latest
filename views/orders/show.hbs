<div class="row">
    <div class="col s12 m8">
        <h3>{{order.title}}
            <small>{{{editIcon order.user user order._id false}}}</small>
        </h3>
        <div class="card order">
            <div class="card-content">
                <p style="font-size: 20px;">Item description:<br> <span style="font-weight: bold;"> {{{order.body}}}</span></p>
                <p style="font-size: 16px;">Price for 1 kg: <br><span style="font-weight: bold; font-size: 20px;">{{{order.price}}}</span></p>
            </div>
            <div class="card-action">
                <form action="/" method="POST" class="form-container">
                    <h5>amount in kg</h5>
                    <input type="number" name="amount" placeholder="enter amount(wight)" required>
                    <input type="hidden" name="var1" value="{{order.price}}">
                    <input type="hidden" name="var2" value="{{order.title}}">
                    <button type="submit" class="btn" name="update" value="{{order._id}}"
                        ,value="{{order.price}} ">enter amount</button>

                    <button type="button" class="btn cancel" onclick="closeForm()">cancel</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{order.user.displayName}}</span>
                <img src="{{order.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/orders/user/{{order.user._id}}">More From {{order.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>