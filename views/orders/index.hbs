<h1>Orders</h1>
<div class="row">
    {{#each orders}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/orders/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                
                <a href="/orders/{{_id}}" class="btn grey">Read More</a>
            </div>
            <div class="card-action center-align">
                {{!-- when clicked added item to user's cart database --}}
                <a href="/orders/{{_id}}" class="btn orange">add to cart</a>
            </div> 
        </div>
    </div>
    {{else}}
    <p>No orders to display</p>
    {{/each}}
</div>
