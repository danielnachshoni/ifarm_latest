
<div class="row">
    <div class="col s12 m8">
        <h3>{{product.title}}
            <small>{{{editIcon product.user user product._id false}}}</small>
        </h3>
        <div class="card order">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{product.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{product.user.displayName}}</span>
                <img src="{{product.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/products/user/{{product.user._id}}">More From {{product.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>