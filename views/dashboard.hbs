{{!-- homepage after logging in --}}

<h1>Profile</h1>
<h3>Welcome {{name}}</h3>
<h3>Are you feeling {{lastName}} today?</h3>
<h3>We hope you're hungry</h3>
<p>Here are your items</p>

{{#if orders}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
                <tr>
                    <td><a href="/orders/{{_id}}"></a>{{title}}</td>
                    <td>{{createdAt}}</td>
                    <td><Span class="dash-status">{{status}}</Span></td>
                    <td></td>


                </tr>
            {{/each}}
        </tbody>

    </table>

{{else}}
    <p>Your basket is empty. </p>
{{/if}}
